{
  "manifest_version": 2,
  "name": "bearblog dev mode",
  "version": "1.0",
  "description": "Dev toolbar for managing bearblog sites",
  "permissions": [
    "storage",
    "*://*.bearblog.dev/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.bearblog.dev/*",
        "<all_urls>"
      ],
      "css": ["content.css"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "images/icons16.png",
    "48": "images/icons48.png",
    "128": "images/icons128.png"
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bearblog-extension@example.com"
    }
  }
}
